{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tv Show</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tv_show.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ tv_show.name }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ tv_show.type }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ tv_show.url }}</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>{{ tv_show.year }}</td>
        </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tvshow_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tvshow_edit', { 'id': tv_show.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
