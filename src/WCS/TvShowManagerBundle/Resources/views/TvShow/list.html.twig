{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} - Liste des séries{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-6">
            <h1>Liste des séries</h1>
        </div>
        <div class="col-xs-6 text-right">
            <a class="btn btn-lg btn-success" href="{{ path('tvshow_add') }}" role="button">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Ajouter une série
            </a>
        </div>
    </div>

    <div class="row">
        {% for tvshow in tvshows %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="img-responsive" src={{ tvshow.url }} alt="Image de la série">
                    <div class="caption">
                        <h3><a href="{{ path('episode_list', { 'id': tvshow.id }) }}">{{ tvshow.name }}</a></h3>
                        <p>Type : {{ tvshow.type }}</p>
                        <p>Année de sortie : {{ tvshow.year }}</p>
                        <p>
                            <a href="{{ path('tvshow_modif', { 'id': tvshow.id }) }}" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Modifier
                            </a>
                            <a href="{{ path('tvshow_delete', { 'id': tvshow.id }) }}" class="btn btn-danger" role="button">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer la série
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
