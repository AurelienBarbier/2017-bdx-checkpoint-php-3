<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Checkpoint\TvShowManagerBundle\Entity\Episode" table="episode">
    <indexes>
      <index name="fk_episode_tv_show_idx" columns="tv_show_id"/>
    </indexes>
    <id name="id" type="integer" column="id"/>
    <id name="tvShow" association-key="true"/>
    <field name="name" type="string" column="name" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="season" type="integer" column="season" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="number" type="integer" column="number" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="note" type="integer" column="note" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <one-to-one field="tvShow" target-entity="TvShow" fetch="LAZY">
      <join-columns>
        <join-column name="tv_show_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
