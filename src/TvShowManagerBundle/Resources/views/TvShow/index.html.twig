{% extends '@TvShowManager/layout.html.twig' %}

{% block body %}
	<div class="row">
		{% for tvShow in twig_tvShows %}
			<div class="col s12 m4 l3">
				<div class="card">
					<div class="card-image">
						<img class="responsive-img" src="{{tvShow.url}}">
						<a href="{{ path('tv_show_manager_detail', {'id' : tvShow.id }) }}" class="btn-floating halfway-fab waves-effect waves-light red">
							<i class="material-icons">visibility</i>
						</a>
					</div>
					<div class="card-content">
						<span class="card-title">{{tvShow.name}}</span>
						<p>{{tvShow.type}} - {{tvShow.year}}</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="row">
		<a href="{{ path('tv_show_manager_add') }}" class="waves-effect waves-light btn">
			<i class="material-icons right">add</i>Ajouter
		</a>
	</div>
{% endblock %}