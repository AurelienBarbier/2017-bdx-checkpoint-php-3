{% extends '@TvShowManager/layout.html.twig' %}

{% block content %}

    <h1>Liste des TvShows :</h1>
    <p><a href="{{ path('tv_shows_add') }}">Ajouter un tvShow</a></p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Genre</th>
                <th>Ann√©e</th>
                <th>Illustration</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for show in tvShows %}
            <tr>
                <td><a href="{{ path('tv_shows_edit', {'tvShowName':show.name}) }}">{{ show.name }}</a></td>
                <td>{{ show.type }}</td>
                <td>{{ show.year }}</td>
                <td><img src="{{ show.url }}" alt="{{ show.name }}" class="illustration"></td>
                <td><a href="{{ path('tv_shows_delete', {'tvShowName':show.name}) }}">Supprimer</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}